<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
>
<TabContainer class="tabsWithoutCloseButton">
        <items>
           
            <TabContainerItem id="idTabContainerEmpInfCent"  name="{i18n>empInfoCentral}{path: 'detailView>/employeeInformation/centralEmployeeCount', formatter:'.formatter.suppressZero'}">
                <content>
                    <core:Fragment
                        fragmentName="com.thy.ux.abroadempinf.fragments.EmployeeInfo.CentralEmployee"
						type="XML"
                    />
                </content>
            </TabContainerItem>
             <TabContainerItem id="idTabContainerEmpInfLocal" name="{i18n>empInfoLocal}{path: 'detailView>/employeeInformation/localEmployeeCount', formatter:'.formatter.suppressZero'}">
                <content>
                    <core:Fragment
                        fragmentName="com.thy.ux.abroadempinf.fragments.EmployeeInfo.LocalEmployee"
						type="XML"
                    />
                </content>
            </TabContainerItem>
        </items>
    </TabContainer>
</core:FragmentDefinition>